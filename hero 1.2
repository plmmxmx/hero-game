def hero(name,hp,attack):
    def kill(h):
        print("hero %s attacking monster!" %h['name'])
        data = {
            'name':name,
            'hp':hp,
            'attack':attack,
            'kill':kill,
            }
        return data

def monster (name,hp,monster_type):
    def walking(m):
        print("monster %s :walking!"%m['name'])
        
    data = {
        'name':name,
        'hp':hp,
        'type':monster_type,
        'walking':walking,
    }
    return data
